@using CoiffeurApp.Models.CoiffeurModel
@model ModelCoiffeur
@{
    ViewBag.Title = "UserBrowserView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <div class="m-content">
        <div class="m-portlet m-portlet--mobile">
            <div class="m-portlet m-portlet--mobile">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <h3 class="m-portlet__head-text">
                                Kullanıcı Listesi
                            </h3>
                        </div>
                    </div>
                    <div class="m-portlet__head-tools">

                    </div>
                </div>
            </div>
            <div class="container ">
                <div class="m-portlet__body">
                    <!--begin: Search Form -->
                    <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                        <div class="row align-items-center">
                            <div class="col-xl-8 order-2 order-xl-1">
                                <div class="form-group m-form__group row align-items-center">

                                    <div class="col-md-6">
                                        <div class="m-input-icon m-input-icon--left">
                                            <input type="text" class="form-control m-input" placeholder="Arama..." id="generalSearch">
                                            <span class="m-input-icon__icon m-input-icon__icon--left">
                                                <span>
                                                    <i class="la la-search"></i>
                                                </span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!--end: Search Form -->
                    <!--begin: Datatable -->
                    <table class="m-datatable" id="html_table" width="100%">
                        <thead>
                            <tr>

                                <th title="Field #1">
                                    Ad
                                </th>
                                <th title="Field #2">
                                    Soyad
                                </th>
                                <th title="Field #3">
                                    Kullanıcı Adı
                                </th>
                                <th title="Field #4">
                                    Şifre
                                </th>
                                <th title="Field #5">
                                    Telefon
                                </th>
                                <th title="Field #6">
                                    Mail
                                </th>
                                <th title="Field #7">
                                    Kullanıcı Tipi
                                </th>
                                <th title="Field #8">
                                    Düzenle
                                </th>
                                <th title="Field #9">
                                    Sil

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.UserList.Count; i++)
                            {
                            var fName = "tr" + @Model.UserList[i].UserId;
                            <tr id="@fName">

                                <td>
                                    @Model.UserList[i].Name
                                </td>
                                <td>
                                    @Model.UserList[i].Surname

                                </td>

                                <td>
                                    @Model.UserList[i].UserName

                                </td>
                                <td>
                                    @Model.UserList[i].Password

                                </td>
                                <td>
                                    @Model.UserList[i].Phone

                                <td>
                                    @Model.UserList[i].Mail

                                </td>
                                <td>
                                    @Model.UserList[i].Type

                                </td>
                                <td>
                                    <a href="/kullanici-islemleri/@Model.UserList[i].UserId" class="btn btn-success active">

                                        Düzenle

                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-danger active" id="delete" onclick="deleteItem(name,@Model.UserList[i].UserId)" name="/kullanici-sil">

                                        Sil

                                    </a>
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                    <!--end: Datatable -->
                </div>

            </div>

        </div>
    </div>
</div>
