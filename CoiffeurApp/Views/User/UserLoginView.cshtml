<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-login m-login--signin  m-login--5" id="m_login">
            <div class="m-login__wrapper-1 m-portlet-full-height">
                <div class="m-login__wrapper-1-1">
                    <div class="m-login__contanier">
                        <div class="m-login__content">
                            <div class="m-login__logo">
                                <a href="#">

                                </a>
                            </div>
                            <div class="m-login__title">
                                <h3>
                                Bayan Saç Tasarım
                                </h3>
                            </div>
                            <div class="m-login__desc">
                                
                            </div>
                            <div class="m-login__form-action">
                                <button type="button" id="m_login_signup" class="btn btn-outline-focus m-btn--pill">

                                    Hesap Oluştur
                                </button>


                            </div>
                        
                        </div>
                    </div>
               
                </div>
            </div>
            <div class="m-login__wrapper-2 m-portlet-full-height">
                <div class="m-login__contanier">
                    <div class="m-login__signin">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                Hesabına Giriş Yap
                            </h3>
                        </div>
                        @using (@Html.BeginForm("UserLoginview", "User", FormMethod.Post, new { @class = "m-login__form m-form" }))
                        {


                            <div class="form-group m-form__group">

                                @Html.TextBoxFor(p => p.UserName, new { @class = "form-control m-input", @type = "text", @placeholder = "Kullanıcı Adı", @name = "username3", @autocomplete = "off" })
                            </div>
                            <div class="form-group m-form__group">

                                @Html.TextBoxFor(p => p.Password, new { @class = "form-control m-input m-login__form-input--last", @type = "Password", @placeholder = "Şifre", @name = "password3" })
                            </div>
                      
                            <div class="m-login__form-action">
                                <button class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air">
                                    Giriş Yap
                                </button>
                            </div>
                        }
                    </div>
                    <div class="m-login__signup">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                Üye Ol
                            </h3>
                            <div class="m-login__desc">
                                Hesabınızı oluşturmak için bilgilerinizi girin:
                            </div>
                        </div>

                        @using (@Html.BeginForm("GetRegister", "User", FormMethod.Post, new { @class = "m-login__form m-form" }))
                        {

                        <div class="form-group m-form__group">
                         
                            <input id="Type" name="Type" type="hidden" value="musteri"/>
                        </div>

                            <div class="form-group m-form__group">

                                @Html.TextBoxFor(p => p.UserName, new { @class = "form-control m-input", @type = "text", @placeholder = "Kullanıcı Adı", @name = "username2" })
                            </div>
                            <div class="form-group m-form__group">

                                @Html.TextBoxFor(p => p.Name, new { @class = "form-control m-input", @type = "text", @placeholder = "Ad", @name = "name" })
                            </div>
                            <div class="form-group m-form__group">

                                @Html.TextBoxFor(p => p.Surname, new { @class = "form-control m-input", @type = "text", @placeholder = "Soyad", @name = "surname" })
                            </div>
                            <div class="form-group m-form__group">

                                @Html.TextBoxFor(p => p.Mail, new { @class = "form-control m-input", @type = "email", @placeholder = "Email", @autocomplete = "off" })
                            </div>
                            <div class="form-group m-form__group">

                                @Html.TextBoxFor(p => p.Phone, new { @class = "form-control m-input", @type = "phone", @placeholder = "Telefon", @name = "phone" })
                            </div>
                            <div class="form-group m-form__group">

                                @Html.TextBoxFor(p => p.Password, new { @class = "form-control m-input", @type = "password", @placeholder = "Şifre", @name = "password" })
                            </div>
                          

                            <div class="m-login__form-sub">
                                <label class="m-checkbox m-checkbox--focus">
                                    <input type="checkbox" name="agree">
                                    I Agree the
                                    <a href="#" class="m-link m-link--focus">
                                        terms and conditions
                                    </a>
                                    .
                                    <span></span>
                                </label>
                                <span class="m-form__help"></span>
                            </div>
                            <div class="m-login__form-action">
                                <button id="" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air" type="submit">
                                    Kaydol
                                </button>
                                <button id="m_login_signup_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom">
                                    İptal
                                </button>
                            </div>
                        }
                    </div>

        
                </div>
            </div>
        </div>
    </div>
    <!-- end:: Page -->
    <!--begin::Base Scripts -->
    <script src="~/Content/assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/Content/assets/demo/default/base/scripts.bundle.js" type="text/javascript"></script>
    <script src="~/Content/assets/snippets/custom/pages/user/login.js" type="text/javascript"></script>
